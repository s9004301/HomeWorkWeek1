@model IEnumerable<HomeW1.Models.客戶銀行資訊>

@{
    ViewBag.Title = "客戶銀行資訊";
}

<h2>客戶銀行資訊</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>
    @Html.ActionLink("下載Xlsx檔案", "DownloadXlsx")
</div>

<div>
    <table class="table">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.銀行名稱)*@
                @Html.ActionLink("銀行名稱", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.銀行代碼)*@
                @Html.ActionLink("銀行代碼", "Index", new { sortOrder = ViewBag.BankSortParm })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.分行代碼)*@
                @Html.ActionLink("分行代碼", "Index", new { sortOrder = ViewBag.BranchSortParm })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.帳戶名稱)*@
                @Html.ActionLink("帳戶名稱", "Index", new { sortOrder = ViewBag.AccountNameSortParm })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.帳戶號碼)*@
                @Html.ActionLink("帳戶號碼", "Index", new { sortOrder = ViewBag.AccountNumSortParm })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.客戶資料.客戶名稱)*@
                @Html.ActionLink("客戶名稱", "Index", new { sortOrder = ViewBag.ClientSortParm })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.銀行名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.銀行代碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.分行代碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.帳戶名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.帳戶號碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>