@model HomeW1.ViewModel.ClientDataViewModel
@* 改用ViewModel *@
@{
    ViewBag.Title = "客戶資料";
}

<h2>客戶資料</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
<p>
    篩選條件 : @Html.DropDownList("SearchString", Model.ClientClassfication, new { @class = "form-control" }) 
    <input type="submit" value="Search" />
</p>
}
<div>
    @Html.ActionLink("下載Xlsx檔案", "DownloadXlsx")
</div>

<div>
    <table class="table">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.客戶名稱)*@
                @Html.ActionLink("客戶名稱", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.統一編號)*@
                @Html.ActionLink("統一編號", "Index", new { sortOrder = ViewBag.TaxIDSortParm })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.電話)*@
                @Html.ActionLink("電話", "Index", new { sortOrder = ViewBag.PhoneSortParm })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.傳真)*@
                @Html.ActionLink("傳真", "Index", new { sortOrder = ViewBag.FaxSortParm })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.地址)*@
                @Html.ActionLink("地址", "Index", new { sortOrder = ViewBag.AddrSortParm })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Email)*@
                @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.EmailSortParm })
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.客戶分類)*@
                @Html.ActionLink("客戶分類", "Index", new { sortOrder = ViewBag.ClientClassSortParm })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ClientData)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.統一編號)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.電話)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.傳真)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.地址)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶分類)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>