@model IEnumerable<HomeW1.Models.客戶聯絡人>

@{
    ViewBag.Title = "客戶聯絡人";
}

<h2>客戶聯絡人</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        職稱篩選條件: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
    <div>
        @Html.ActionLink("下載Xlsx檔案", "DownloadXlsx")
    </div>

    <div>
        <table class="table">
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.職稱)*@
                    @Html.ActionLink("職稱", "Index", new { sortOrder = ViewBag.JobSortParm })
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.姓名)*@
                    @Html.ActionLink("姓名", "Index", new { sortOrder = ViewBag.NameSortParm })
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Email)*@
                    @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.EmailSortParm })
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.手機)*@
                    @Html.ActionLink("手機", "Index", new { sortOrder = ViewBag.CellpSortParm })
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.電話)*@
                    @Html.ActionLink("電話", "Index", new { sortOrder = ViewBag.PhoneSortParm })
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.客戶資料.客戶名稱)*@
                    @Html.ActionLink("客戶名稱", "Index", new { sortOrder = ViewBag.ClientSortParm })
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.職稱)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.姓名)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.手機)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.電話)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
